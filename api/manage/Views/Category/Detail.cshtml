@model Model.DB.Category
@{
    ViewData["Title"] = "Detail";
}
<script src="~/js/category/detail.js"></script>
<div class="main">
    <div class="main-content">
        <div class="container-fluid">
           @* <form asp-controller="Category" asp-action="AddOrEdit" method="post">*@
            <form>
                <input type="hidden" id="c_id" value="@Model.c_id"/>
                <div class="form-group">
                    <input style="width:200px;" class="form-control" placeholder="text field" value="@Model.c_name" id="c_name" type="text">
                </div>
                <div class="form-group">
                    <input type="hidden" id="img_path" value="@Model.img_path">
                    <div id="img"></div>
                        <input type="file" id="upload">
                    <button type="button" class="btn btn-default" onclick="upimg();"><i class="fa fa-plus-square"></i> 上传 </button>
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="button" onclick="addoredit();" value="提交"/>
                </div>
            </form>
        </div>
    </div>
</div>
